{
  "name": "invoice",
  "version": "0.1.0",
  "homepage": "./",
  "main": "src/start.js",
  "author": "dabbas",
  "description": "an app for invoices",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./src/images/logo.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip"
        }
      ]
    }
  },
  "private": true,
  "dependencies": {
    "@date-io/date-fns": "^1.3.13",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/pickers": "^3.2.10",
    "@reduxjs/toolkit": "^1.4.0",
    "axios": "^0.20.0",
    "date-fns": "^2.15.0",
    "dotenv": "^8.2.0",
    "fontsource-roboto": "^3.0.3",
    "jss-rtl": "^0.3.0",
    "moment": "^2.27.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-dropzone": "^11.2.4",
    "react-icons": "^3.11.0",
    "react-moment": "^1.0.0",
    "react-redux": "^7.2.2",
    "uuid": "^8.3.1"
  },
  "scripts": {
    "dev": "nf start",
    "start": "  electron-forge start  react-scripts start ",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-start": "node src/start-react",
    "react": "react-scripts start",
    "pack": "build --dir",
    "dist": "npm run build && build",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "rebuild": "electron-rebuild -f -w sharp"
  },
  "build": {
    "appId": "com.electron.electron-with-create-react-app",
    "author": {
      "name": "Hamzeh Dabbas"
    },
    "description": "An app to storing invoices and accounting data.",
    "directories": {
      "buildResources": "build"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron-forge/maker-appx": "^6.0.0-beta.53",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.53",
    "@electron-forge/maker-zip": "^6.0.0-beta.53",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "electron": "^10.0.0",
    "electron-installer-windows": "^3.0.0",
    "electron-rebuild": "^2.3.2",
    "electron-squirrel-startup": "^1.0.0",
    "electron-winstaller": "^4.0.1",
    "react-scripts": "3.4.3"
  },
  "electron-dev": "set ELECTRON_START_URL=http://localhost:3000 && electron ."
}
